{
  "name": "vs-script-commands",
  "displayName": "Script Commands",
  "description": "Adds additional commands to Visual Studio Code that uses scripts (JavaScript) for execution.",
  "version": "5.0.0",
  "publisher": "mkloubert",
  "engines": {
    "vscode": "^1.17.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "keywords": [
    "Custom",
    "Commands",
    "Scripts",
    "JavaScript",
    "NodeJS"
  ],
  "activationEvents": [
    "workspaceContains:/.vscode"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.scriptCommands.execute",
        "title": "Execute command",
        "category": "Script commands"
      },
      {
        "command": "extension.scriptCommands.executeVSCode",
        "title": "Execute VSCode command",
        "category": "Script commands"
      },
      {
        "command": "extension.scriptCommands.quickExecution",
        "title": "Quick execution",
        "category": "Script commands"
      }
    ],
    "configuration": {
      "properties": {
        "script.commands": {
          "type": "object",
          "properties": {
            "commands": {
              "description": "One or more command to register.",
              "oneOf": [
                {
                  "type": "object",
                  "description": "The command to register.",
                  "properties": {
                    "arguments": {
                      "type": "array",
                      "description": "One or more arguments for the callbacks."
                    },
                    "askForArgument": {
                      "type": "boolean",
                      "description": "Defines if the GUI asks for an argument when invoke manually or not.",
                      "default": false
                    },
                    "async": {
                      "type": "boolean",
                      "description": "Invokes command async or not.",
                      "default": true
                    },
                    "button": {
                      "description": "Settings for optional button in the status bar.",
                      "type": "object",
                      "properties": {
                        "color": {
                          "type": "string",
                          "description": "The custom (text) color for the button.",
                          "default": "#ffffff"
                        },
                        "isRight": {
                          "type": "boolean",
                          "description": "Set button on the right side or not.",
                          "default": false
                        },
                        "priority": {
                          "type": "number",
                          "description": "The custom priority.",
                          "default": 0
                        },
                        "show": {
                          "type": "boolean",
                          "description": "Show button on startup or not.",
                          "default": true
                        },
                        "text": {
                          "type": "string",
                          "description": "The caption for the button."
                        },
                        "tooltip": {
                          "type": "string",
                          "description": "The tooltip for the button."
                        }
                      }
                    },
                    "cached": {
                      "type": "boolean",
                      "description": "Cache script or not.",
                      "default": false
                    },
                    "continueOnError": {
                      "type": "boolean",
                      "description": "Continue on error or cancel.",
                      "default": true
                    },
                    "commandState": {
                      "description": "The initial value for ScriptCommandExecutorArguments.commandState property.",
                      "default": {}
                    },
                    "description": {
                      "type": "string",
                      "description": "The description for the command."
                    },
                    "displayName": {
                      "type": "string",
                      "description": "The custom display name."
                    },
                    "id": {
                      "type": "string",
                      "description": "The ID of the command."
                    },
                    "onClose": {
                      "type": "boolean",
                      "description": "Executes the command on close or not.",
                      "default": false
                    },
                    "onConfigChanged": {
                      "type": "boolean",
                      "description": "Is invoked after settings.json has been changed.",
                      "default": false
                    },
                    "onEditorChanged": {
                      "type": "boolean",
                      "description": "Is invoked after a text editor changed.",
                      "default": false
                    },
                    "onFileChanged": {
                      "type": "boolean",
                      "description": "Is invoked when a file has been changed.",
                      "default": false
                    },
                    "onFileClosed": {
                      "type": "boolean",
                      "description": "Is invoked when a file has been closed.",
                      "default": false
                    },
                    "onFileDeleted": {
                      "type": "boolean",
                      "description": "Is invoked when a file has been deleted.",
                      "default": false
                    },
                    "onFileOpened": {
                      "type": "boolean",
                      "description": "Is invoked when a file has been opened.",
                      "default": false
                    },
                    "onNewFile": {
                      "type": "boolean",
                      "description": "Is invoked when a file has been created.",
                      "default": false
                    },
                    "onSaved": {
                      "type": "boolean",
                      "description": "Is invoked when a file has been saved.",
                      "default": false
                    },
                    "onStartup": {
                      "type": "boolean",
                      "description": "Executes the command on startup or not.",
                      "default": false
                    },
                    "onWillSave": {
                      "type": "boolean",
                      "description": "Is invoked when a file is going to be saved.",
                      "default": false
                    },
                    "options": {
                      "description": "Additional data for the execution."
                    },
                    "script": {
                      "type": "string",
                      "description": "The path to the script to execute.",
                      "default": "./my-command.js"
                    },
                    "sortOrder": {
                      "type": "number",
                      "description": "The sort order.",
                      "default": 0
                    },
                    "suppressArguments": {
                      "type": "boolean",
                      "description": "Supress own arguments of the extension or not.",
                      "default": false
                    }
                  },
                  "required": [
                    "id",
                    "script"
                  ]
                },
                {
                  "type": "array",
                  "description": "The list of commands to register.",
                  "items": {
                    "type": "object",
                    "properties": {
                      "arguments": {
                        "type": "array",
                        "description": "One or more arguments for the callbacks."
                      },
                      "askForArgument": {
                        "type": "boolean",
                        "description": "Defines if the GUI asks for an argument when invoke manually or not.",
                        "default": false
                      },
                      "async": {
                        "type": "boolean",
                        "description": "Invokes command async or not.",
                        "default": true
                      },
                      "button": {
                        "description": "Settings for optional button in the status bar.",
                        "type": "object",
                        "properties": {
                          "color": {
                            "type": "string",
                            "description": "The custom (text) color for the button.",
                            "default": "#ffffff"
                          },
                          "isRight": {
                            "type": "boolean",
                            "description": "Set button on the right side or not.",
                            "default": false
                          },
                          "priority": {
                            "type": "number",
                            "description": "The custom priority.",
                            "default": 0
                          },
                          "show": {
                            "type": "boolean",
                            "description": "Show button on startup or not.",
                            "default": true
                          },
                          "text": {
                            "type": "string",
                            "description": "The caption for the button."
                          },
                          "tooltip": {
                            "type": "string",
                            "description": "The tooltip for the button."
                          }
                        }
                      },
                      "cached": {
                        "type": "boolean",
                        "description": "Cache script or not.",
                        "default": false
                      },
                      "commandState": {
                        "description": "The initial value for ScriptCommandExecutorArguments.commandState property.",
                        "default": {}
                      },
                      "continueOnError": {
                        "type": "boolean",
                        "description": "Continue on error or cancel.",
                        "default": true
                      },
                      "description": {
                        "type": "string",
                        "description": "The description for the command."
                      },
                      "displayName": {
                        "type": "string",
                        "description": "The custom display name."
                      },
                      "id": {
                        "type": "string",
                        "description": "The ID of the command."
                      },
                      "onClose": {
                        "type": "boolean",
                        "description": "Executes the command on close or not.",
                        "default": false
                      },
                      "onConfigChanged": {
                        "type": "boolean",
                        "description": "Is invoked after settings.json has been changed.",
                        "default": false
                      },
                      "onEditorChanged": {
                        "type": "boolean",
                        "description": "Is invoked after a text editor changed.",
                        "default": false
                      },
                      "onFileChanged": {
                        "type": "boolean",
                        "description": "Is invoked when a file has been changed.",
                        "default": false
                      },
                      "onFileClosed": {
                        "type": "boolean",
                        "description": "Is invoked when a file has been closed.",
                        "default": false
                      },
                      "onFileDeleted": {
                        "type": "boolean",
                        "description": "Is invoked when a file has been deleted.",
                        "default": false
                      },
                      "onFileOpened": {
                        "type": "boolean",
                        "description": "Is invoked when a file has been opened.",
                        "default": false
                      },
                      "onNewFile": {
                        "type": "boolean",
                        "description": "Is invoked when a file has been created.",
                        "default": false
                      },
                      "onSaved": {
                        "type": "boolean",
                        "description": "Is invoked when a file has been saved.",
                        "default": false
                      },
                      "onStartup": {
                        "type": "boolean",
                        "description": "Executes the command on startup or not.",
                        "default": false
                      },
                      "onWillSave": {
                        "type": "boolean",
                        "description": "Is invoked when a file is going to be saved.",
                        "default": false
                      },
                      "options": {
                        "description": "Additional data for the execution."
                      },
                      "script": {
                        "type": "string",
                        "description": "The path to the script to execute.",
                        "default": "./my-command.js"
                      },
                      "sortOrder": {
                        "type": "number",
                        "description": "The sort order.",
                        "default": 0
                      },
                      "suppressArguments": {
                        "type": "boolean",
                        "description": "Supress own arguments of the extension or not.",
                        "default": false
                      }
                    },
                    "required": [
                      "id",
                      "script"
                    ]
                  }
                }
              ]
            },
            "disableNewVersionPopups": {
              "description": "Disables the display of popups that reports for a new version of that extension.",
              "type": "boolean",
              "default": false
            },
            "globals": {
              "description": "Global data available for ALL commands defined by that extension."
            },
            "quick": {
              "description": "Settings for 'quick execution'.",
              "type": "object",
              "properties": {
                "cwd": {
                  "description": "The initial current directory for the executions.",
                  "type": "string"
                },
                "disableHexView": {
                  "description": "Do not show binary data in 'hex view'.",
                  "type": "boolean",
                  "default": false
                },
                "noResultInfo": {
                  "description": "Do not show results of executions.",
                  "type": "boolean",
                  "default": false
                },
                "saveResultsToState": {
                  "description": "Save all results to $state variable or not.",
                  "type": "boolean",
                  "default": false
                },
                "showResultInTab": {
                  "description": "Show results in tab instead of a popup or not.",
                  "type": "boolean",
                  "default": false
                },
                "saveToGlobalHistory": {
                  "description": "Show results in tab instead of a popup or not.",
                  "type": "boolean",
                  "default": false
                },
                "saveToHistory": {
                  "description": "Automatically save entries to history or not.",
                  "type": "boolean",
                  "default": false
                },
                "state": {
                  "description": "The initial state value."
                }
              }
            },
            "showOutput": {
              "type": "boolean",
              "description": "Show output on startup or not.",
              "default": false
            },
            "showInternalVSCommands": {
              "type": "boolean",
              "description": "Show internal Visual Studio Code commands in GUI or not.",
              "default": false
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/fs-extra": "^2.1.0",
    "@types/glob": "^5.0.30",
    "@types/html-entities": "^1.2.15",
    "@types/marked": "0.0.28",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "@types/tmp": "0.0.32",
    "@types/uuid": "^2.0.29",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "icon": "icon.png",
  "author": {
    "name": "Marcel Joachim Kloubert"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mkloubert/vs-script-commands"
  },
  "bugs": {
    "url": "https://github.com/mkloubert/vs-script-commands/issues"
  },
  "readmeFilename": "README.md",
  "dependencies": {
    "fs-extra": "^3.0.0",
    "glob": "^7.1.1",
    "hexy": "^0.2.9",
    "html-entities": "^1.2.1",
    "marked": "^0.3.6",
    "moment": "^2.17.1",
    "node-workflows": "^1.3.1",
    "public-ip": "^2.3.3",
    "random-int": "^1.0.0",
    "tmp": "0.0.31",
    "uuid": "^3.0.1"
  }
}
